/**
 * Created by Administrator on 2018/3/15.
 */
var stage = new createjs.Stage('gameView');
createjs.Ticker.addEventListener("tick",stage);
createjs.Ticker.setFPS(30);
//创建一个MovieClip对象，第一个参数为渲染（null表示没有渲染），第二个参数为起始位置，第三个参数为是否可循环
// （true为可循环）第四个参数为时间线（start：50为当前线为50.stop:0表示停止线为0）
var mc = new createjs.MovieClip(null,0,true,{start:50,stop:0});
stage.addChild(mc);
var stage1 = new createjs.Shape(new createjs.Graphics().beginFill("#999999").drawCircle(0,100,30));
var stage2 = new createjs.Shape(new createjs.Graphics().beginFill("555555").drawCircle(0,100,30));

//设置mc的时间线（图形运行的动画），制定第一个图形.to({x:0}).to({x:400},100)表示x坐标从0开始到400结束，时间线为100
//而to({x:0},100)表示x轴重新回到0，时间线还是100
mc.timeline.addTween(createjs.Tween.get(stage1).to({x:0}).to({x:400},100).to({x:0},100));
//设置mc的时间线（图形运行的动画），制定第二个图形.to({x:400}).to({x:0},100)表示x坐标从400开始到0结束，时间线为100
//而to({x:400},100)表示x轴重新回到400，时间线还是100
mc.timeline.addTween(createjs.Tween.get(stage2).to({x:400}).to({x:0},100).to({x:400},100));
//设置图形从start位置50开始运行。
mc.gotoAndPlay("start");
//mc.gotoAndPlay("stop");设置图形从0开始运行
