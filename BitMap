<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="lib/easeljs.min.js"></script>
</head>
<body onload="init()">
<canvas id="canvas" width="300" height="400"></canvas>
</body>
<script>
    var stage,img;
    function init(){
        stage = new createjs.Stage(document.getElementById('canvas'));
        //实现持续得更新，图片能够全部显示
        createjs.Ticker.addEventListener("tick",handleTick);
        createjs.Ticker.setFPS(60);
        //定义图形对象
        img = new Image();
        //在图形对象的加载事件中，调用drawFrank函数
        img.addEventListener('load',drawFrank);
        img.src = "../images/blueSkirt.jpg";
    }
    function drawFrank(e){
        //用bitmap函数将定义的图形载入，最后加载到舞台上。
        var frank = new createjs.Bitmap(e.target);
        stage.addChild(frank);
        stage.update();
    }
    function handleTick(){
        stage.update();
    }
</script>
</html>
